{
  "name": "nielskonrad-boilerplate-webgl",
  "author": "Niels Konrad",
  "version": "1.0.0",
  "license": "ISC",
  "description": "A boilerplate to quickly setup new webgl driven projects",
  "scripts": {
    "backend:build": "node src/app.js",
    "backend:development": "nodemon src/app.js",
    "frontend:build": "webpack --progress --config bundler/webpack.config.build.js",
    "frontend:development": "webpack serve --progress --config bundler/webpack.config.development.js",
    "start": "concurrently --kill-others \"npm run backend:development\" \"npm run frontend:development\""
  },
  "dependencies": {
    "@ashthornton/asscroll": "^2.0.2",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@barba/core": "^2.9.7",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^5.2.6",
    "dat.gui": "^0.7.7",
    "dotenv": "^10.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "file-loader": "^6.2.0",
    "glslify-loader": "^2.0.0",
    "gsap": "^3.7.1",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "method-override": "^3.0.0",
    "mini-css-extract-plugin": "^2.1.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.12",
    "portfinder-sync": "0.0.2",
    "pug": "^3.0.2",
    "raw-loader": "^4.0.2",
    "style-loader": "^3.0.0",
    "three": "^0.130.1",
    "ua-parser-js": "^0.7.28",
    "webpack": "^5.42.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "html-webpack-pug-plugin": "^3.0.0",
    "image-minimizer-webpack-plugin": "^2.2.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0"
  }
}
